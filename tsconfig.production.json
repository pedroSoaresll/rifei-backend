{
  "extends": "./tsconfig",
  "compilerOptions": {
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "removeComments": true
  },
  "exclude": [
    "dangerfile.ts",
    "dangerfile.lite.ts",
    "scripts",
    "node_modules",
    "source/**/fixtures/*",
    "source/**/_tests/*",
    "distribution",
    "types",
    "src/**/*.spec.ts"
  ]
}
