{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["dom", "es5", "scripthost", "es2015"],
    "types": ["node"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["./src/**/*.ts", "src/email/*"],
  "exclude": ["node_modules", "src/**/*.spec.ts"]
}
