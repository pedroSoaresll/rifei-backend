{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015"
    ],
    "types": [
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types",
    ],
    "baseUrl": "./src",
  },
  "include": [
    "src/typings",
    "src",
    "src/email"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts"
  ]
}
